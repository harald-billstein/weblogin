<Resource name="jdbc/DBNAM"
          global="jdbc/DBNAME"
          auth="Container"
          type="javax.sql.DataSource"
          driverClassName="com.mysql.jdbc.Driver"
          url="jdbc:mysql://localhost:3306/DBNAME"
          username="user"
          password="password"

          maxActive="100"
          maxIdle="20"
          minIdle="5"
          maxWait="10000"/>